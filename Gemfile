source 'http://rubygems.org'

gem 'rails', '3.0.1'

# SQLite
gem 'sqlite3-ruby', :require => 'sqlite3'

# irb Enhancements
gem 'awesome_print'

# Scheduled Jobs
gem 'whenever'

# Background Jobs
gem 'delayed_job'

# Daemons
gem 'daemons'

# HTTP Requests
gem 'httparty'

# HTML/XML/JSON Parsing
gem 'nokogiri'
gem 'imasquerade'

# Pagination
gem 'will_paginate', '3.0.pre2'

# Full-Text Search
gem 'sunspot_rails', '1.2'

# Facebook
gem 'koala', '1.0.0.beta'

# Twitter
gem 'twitter'
gem 'tweetstream'

# Bayesian Classification
gem 'kitop-classifier', :git => 'git://github.com/logankoester/classifier.git'

