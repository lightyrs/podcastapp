<div class="search">
	<%= form_tag(search_path, :method => "get") do %>
	  <%= label_tag(:q, "Search for:") %>
	  <%= text_field_tag(:q) %>
	  <%= submit_tag("Search") %>
	<% end %>
</div>

<h1>Searching podcasts (<%= @result_count %>)</h1>
<%= will_paginate(@search.hits) %>

<div class="results">
  <% @search.each_hit_with_result do |hit, podcast| -%>
    <div class="result">
      <h4><%= link_to podcast.name, podcast %></h4>
    </div>
  <% end -%>
</div>