<h2>Sign Up</h2>

<%= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |form| %>

  <% form.inputs do %>
    <%= form.input :email, :as => :email, :required => true %>
		<% if @user.password_required? %>	
    	<%= form.input :password, :as => :password, :required => true %>
    	<%= form.input :password_confirmation, :label => "Confirm Password", :as => :password, :required => true %>
		<% end %>
	  <% form.buttons do %>
	    <%= form.commit_button :label => "Sign Up" %>
	  <% end %>
  <% end %>

<% end %>