<h2>Sign In</h2>

<%= semantic_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |form| %>

	<% form.inputs do %>
		<div class="clearfix">
			<%= render :partial => "authentications/index" %>
		</div>
		<%= form.input :username, :required => true %>	
	  <%= form.input :email, :as => :email %>
	  <%= form.input :password, :as => :password %>
		<% if devise_mapping.rememberable? -%>
	    <%= form.input :remember_me, :as => :boolean %>
	  <% end -%>
		<% form.buttons do %>
		  <%= form.commit_button :label => "Sign In" %>
		<% end %>
	<% end %>

<% end %>

<%= render :partial => "devise/shared/links" %>