###################################################################################################
#
# script/facebook_daemon
# This script spawns script/facebook as a daemon
#
###################################################################################################
require 'daemons'

require File.expand_path(File.join(File.dirname(__FILE__), '..', 'config', 'environment'))

Daemons.run('script/facebook', {:dir_mode => :normal, :dir => "#{RAILS_ROOT}/tmp/pids"})